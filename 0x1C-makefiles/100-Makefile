CC = gcc
NAME = school
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

# Do not compile if m.h is missing
main.c school.c: m.h

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) *.o

fclean: clean oclean

re: oclean all
